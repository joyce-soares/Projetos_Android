<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joyce.organizze">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Organizze">
        <activity
            android:name=".activitys.ReceitaActivity"
            android:theme="@style/Theme.Receitas_Theme"
            android:exported="true" />
        <activity
            android:name=".activitys.DespesaActivity"
            android:theme="@style/Theme.Despesa_Theme"
            android:exported="true" />
        <activity
            android:name=".activitys.PrincipalActivity"
            android:exported="true"
            android:label="@string/title_activity_principal"
            android:theme="@style/Theme.Organizze.NoActionBar" />
        <activity
            android:name=".activitys.CadastroActivity"
            android:exported="true" />
        <activity
            android:name=".activitys.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activitys.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>